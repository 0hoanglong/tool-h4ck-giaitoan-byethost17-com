{
  "manifest_version": 2,
  "name": "Bypass & Answers by HoangLong",
  "version": "1.0",
  "description": "1. Bypass check mã định danh (toggle)\n2. Xem đáp án (button)\n3. Hiện điểm hiện tại (button)\nMade by HoangLong",
  "permissions": ["storage", "activeTab", "tabs"],
  "browser_action": {
    "default_title": "Bypass & Answers",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "host_permissions": ["*://giaitoan.byethost17.com/*"],
  "content_scripts": [
    {
      "matches": ["*://giaitoan.byethost17.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "applications": {
    "gecko": {
      "id": "bypass-answers@hoanglong",
      "strict_min_version": "91.0"
    }
  }
}
